# ============================================
# AgriChain Harvest Optimizer - Environment Variables Template
# ============================================
# Copy this file to .env and fill in your actual values

# ============================================
# Supabase Configuration
# ============================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# ============================================
# Neo4j AuraDB Configuration
# ============================================
NEO4J_URI=neo4j+s://xxxxx.databases.neo4j.io
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password
NEO4J_DATABASE=neo4j

# ============================================
# Redis Configuration (for Celery)
# ============================================
REDIS_HOST=your-redis-host.redis.cloud
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_URL=redis://:your-redis-password@your-redis-host.redis.cloud:6379

# ============================================
# OpenWeatherMap API
# ============================================
OPENWEATHER_API_KEY=your-openweathermap-api-key

# ============================================
# Google Earth Engine
# ============================================
GEE_SERVICE_ACCOUNT_EMAIL=your-service-account@project.iam.gserviceaccount.com
GEE_PRIVATE_KEY_PATH=./config/gee-service-account-key.json

# ============================================
# Google Gemini API (AI Orchestration)
# ============================================
GEMINI_API_KEY=your-gemini-api-key

# ============================================
# Frontend Environment Variables
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_API_TIMEOUT=30000

# ============================================
# Agmarknet API (Indian Mandi Prices)
# ============================================
AGMARKNET_API_KEY=your-agmarknet-api-key

# ============================================
# Application Configuration
# ============================================
ENVIRONMENT=development
LOG_LEVEL=INFO
API_PORT=8000
FRONTEND_URL=http://localhost:3000

# ============================================
# Security
# ============================================
SECRET_KEY=your-secret-key-change-this-in-production
